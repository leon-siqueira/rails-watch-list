<h1>My lists</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<div class="container">
  <div class="row justify-content-center">
    <% if @lists.all.empty? %>
      <div class="text-center">
        <h2>No movie list found :(</h2>
        <%= link_to new_list_path do %>
          <div class="btn btn-primary">
              <i class="fas fa-plus"></i> Add movie list
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="col-12 mb-3 align-items-end">
        <div class="btn btn-primary">
            <i class="fas fa-plus"></i> Add movie list
        </div>
      </div>

        <%= render "list_index", lists: @lists %>
    <% end %>
  </div>
</div>

    <% lists.each do |list| %>
      <div class="col-12 col-lg-4 col-md-6">
        <%= link_to list_path(list), class: 'no-deco' do %>
          <div class="card-category mb-3" style="background-image: linear-gradient(<%= rand(0..360) %>deg,
                                                                              rgba(<%= rand(0..255) %>,<%= rand(0..255) %>,<%= rand(0..255) %>, 0.4),
                                                                              rgba(<%= rand(0..255) %>,<%= rand(0..255) %>,<%= rand(0..255) %>, 0.4))">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
